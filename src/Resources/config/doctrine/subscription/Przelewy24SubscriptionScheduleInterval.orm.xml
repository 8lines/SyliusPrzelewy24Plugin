<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24SubscriptionScheduleInterval" table="bitbag_przelewy24_subscription_schedule_interval">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="state" type="string" column="state" length="255" nullable="false">
            <options>
                <option name="default">scheduled</option>
            </options>
        </field>

        <field name="sequence" type="integer" column="sequence" nullable="true" />
        <field name="startsAt" type="datetime_immutable" column="starts_at" nullable="true" />
        <field name="endsAt" type="datetime_immutable" column="ends_at" nullable="true" />

        <field name="failedPaymentAttempts" type="integer" column="failed_payment_attempts" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <one-to-one field="syliusOrder" target-entity="Sylius\Component\Core\Model\Order" fetch="EAGER">
            <join-column name="sylius_order_id" referenced-column-name="id" nullable="true" />
        </one-to-one>

        <one-to-one field="syliusPayment" target-entity="Sylius\Component\Core\Model\Payment" fetch="EAGER">
            <join-column name="sylius_payment_id" referenced-column-name="id" nullable="true" />
        </one-to-one>

        <many-to-one field="schedule" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24SubscriptionSchedule" inversed-by="intervals" fetch="EAGER">
            <join-column name="schedule_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
