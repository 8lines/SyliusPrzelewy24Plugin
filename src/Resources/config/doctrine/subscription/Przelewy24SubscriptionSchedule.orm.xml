<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24SubscriptionSchedule" table="bitbag_przelewy24_subscription_schedule">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="currentSequence" type="integer" column="current_sequence" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <one-to-many field="intervals" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24SubscriptionScheduleInterval" mapped-by="schedule" fetch="EAGER">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <one-to-one field="subscription" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24Subscription" inversed-by="schedule" fetch="EAGER">
            <join-column name="subscription_id" referenced-column-name="id" nullable="true" />
        </one-to-one>
    </mapped-superclass>
</doctrine-mapping>
