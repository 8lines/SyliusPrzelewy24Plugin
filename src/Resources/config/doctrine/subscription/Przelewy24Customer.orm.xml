<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24Customer" table="bitbag_przelewy24_customer">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <one-to-many field="creditCards" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24CreditCard" mapped-by="owner" fetch="EAGER">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <one-to-one field="syliusCustomer" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\CustomerInterface" mapped-by="przelewy24Customer" fetch="EAGER" />
    </mapped-superclass>
</doctrine-mapping>
