<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24Subscription" table="bitbag_przelewy24_subscription">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="state" type="string" column="state" length="255" nullable="false">
            <options>
                <option name="default">active</option>
            </options>
        </field>

        <many-to-one field="owner" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24Customer" fetch="EAGER">
            <join-column name="owner_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <one-to-one field="baseRecurringOrder" target-entity="Sylius\Component\Core\Model\OrderInterface" fetch="EAGER">
            <join-column name="base_recurring_order_id" referenced-column-name="id" nullable="true" />
        </one-to-one>

        <field name="startsAt" type="datetime_immutable" column="starts_at" nullable="true" />
        <field name="endsAt" type="datetime_immutable" column="ends_at" nullable="true" />

        <one-to-one field="configuration" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24SubscriptionConfiguration" inversed-by="subscription" fetch="EAGER">
            <join-column name="configuration_id" referenced-column-name="id" nullable="false" />

            <cascade>
                <cascade-all />
            </cascade>
        </one-to-one>

        <one-to-one field="schedule" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24SubscriptionSchedule" inversed-by="subscription" fetch="EAGER">
            <join-column name="schedule_id" referenced-column-name="id" nullable="false" />

            <cascade>
                <cascade-all />
            </cascade>
        </one-to-one>
    </mapped-superclass>
</doctrine-mapping>
