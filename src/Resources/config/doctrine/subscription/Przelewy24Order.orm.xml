<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24Order" table="bitbag_przelewy24_order">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="recurring" type="boolean" column="recurring" nullable="false">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <field name="recurringSequenceIndex" type="integer" column="recurring_sequence_index" nullable="true" />

        <many-to-one field="subscription" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\Przelewy24Subscription">
            <join-column name="subscription_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <one-to-one field="syliusOrder" target-entity="BitBag\SyliusPrzelewy24Plugin\Subscription\Entity\RecurringOrderInterface" mapped-by="przelewy24Order" fetch="EAGER" />
    </mapped-superclass>
</doctrine-mapping>
